{
    "name": "weather-bot",
    "private": true,
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node dist/main.js",
        "start-dev": "cross-env NODE_ENV=dev ts-node bot/main.ts",
        "dev": "cross-env NODE_ENV=dev nodemon",
        "build": "rimraf dist && tsc && npm start",
        "lt": "lt --port 3000"
    },
    "author": "Sergey Z",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.1.3",
        "dotenv": "^16.0.3",
        "telegraf": "^4.11.2",
        "telegraf-session-local": "^2.1.0"
    },
    "devDependencies": {
        "@types/node": "^18.11.17",
        "cross-env": "^7.0.3",
        "localtunnel": "^2.0.2",
        "nodemon": "^2.0.20",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "nodemonConfig": {
        "ext": ".ts,.js",
        "exec": "ts-node bot/main.ts",
        "watch": [
            "bot"
        ]
    }
}
